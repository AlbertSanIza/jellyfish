{
    "name": "jellyfish",
    "description": "A simple yet powerful personal assistant ðŸª¼",
    "version": "1.0.0",
    "type": "module",
    "module": "src/index.ts",
    "private": true,
    "scripts": {
        "dev": "bun src/index.ts",
        "build": "bun build --compile --minify --sourcemap --bytecode --target=bun-darwin-arm64 src/index.ts --outfile dist/jellyfish",
        "prettier": "prettier --check .",
        "prettier:fix": "prettier --write .",
        "deamon:start": "bun index.ts",
        "deamon:dev": "bun --watch index.ts",
        "daemon:start": "pm2 start index.ts --interpreter bun --name jellyfish",
        "daemon:stop": "pm2 stop jellyfish",
        "daemon:restart": "pm2 restart jellyfish",
        "daemon:status": "pm2 status jellyfish",
        "daemon:logs": "pm2 logs jellyfish",
        "daemon:save": "pm2 save",
        "prepare": "husky"
    },
    "dependencies": {
        "@anthropic-ai/claude-agent-sdk": "^0.2.50",
        "@types/bun": "^1.3.9",
        "chalk": "^5.6.2",
        "commander": "^14.0.3",
        "figlet": "^1.10.0",
        "grammy": "^1.40.0",
        "husky": "^9.1.7",
        "lint-staged": "^16.2.7",
        "node-cron": "^4.2.1",
        "ora": "^9.3.0",
        "pm2": "^6.0.14",
        "prettier": "^3.8.1",
        "telegramify-markdown": "^1.3.2",
        "typescript": "^5.9.3"
    },
    "lint-staged": {
        "*": [
            "bunx prettier --check --ignore-unknown"
        ]
    }
}
