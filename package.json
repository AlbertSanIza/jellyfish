{
    "name": "jellyfish-ai",
    "version": "1.0.0",
    "private": true,
    "module": "src/index.ts",
    "scripts": {
        "dev": "bun --watch src/index.ts",
        "start": "bun src/index.ts",
        "prettier": "prettier --check .",
        "prettier:fix": "prettier --write .",
        "prepare": "husky",
        "daemon:start": "pm2 start src/index.ts --interpreter bun --name jellyfish-ai",
        "daemon:stop": "pm2 stop jellyfish-ai",
        "daemon:restart": "pm2 restart jellyfish-ai",
        "daemon:status": "pm2 status jellyfish-ai",
        "daemon:logs": "pm2 logs jellyfish-ai",
        "daemon:save": "pm2 save"
    },
    "dependencies": {
        "@anthropic-ai/claude-agent-sdk": "^0.1.0",
        "grammy": "^1.36.3",
        "node-cron": "^4.2.1"
    },
    "devDependencies": {
        "@types/bun": "latest",
        "husky": "^9.1.7",
        "lint-staged": "^16.2.7",
        "pm2": "^6.0.8",
        "prettier": "^3.8.1"
    },
    "lint-staged": {
        "*": [
            "bunx prettier --check --ignore-unknown"
        ]
    }
}
